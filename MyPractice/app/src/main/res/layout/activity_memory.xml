<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_60_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/memoryInfo"
        style="@style/commonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="left"
        tools:text="内存信息" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/common_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="刷新" />

            <Button
                android:id="@+id/addJavaMemory"
                style="@style/common_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAddJavaMemory"
                android:text="增加10m java内存" />

            <Button
                android:id="@+id/addBitmapMemory"
                style="@style/common_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAddBitmapMemory"
                android:text="增加10m bitmap内存" />

            <Button
                android:id="@+id/addNativeMemory"
                style="@style/common_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAddNativeMemory"
                android:text="增加10m native 内存" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>