<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="left|top"
        android:useLevel="false"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="rectangle" android:useLevel="true">
            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="@color/color_CG" />
        </shape>
    </item>
    <item
        android:gravity="left|top"
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:useLevel="false">
        <shape android:shape="rectangle"  android:useLevel="true">
            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="@color/color_CO" />
        </shape>
    </item>
    <item
        android:gravity="left|top"
        android:left="20dp"
        android:top="20dp"
        android:useLevel="false">
        <shape android:shape="rectangle"  android:useLevel="true">
            <size
                android:width="10dp"
                android:height="10dp" />
            <solid android:color="@color/color_C3" />
        </shape>
    </item>
</layer-list>